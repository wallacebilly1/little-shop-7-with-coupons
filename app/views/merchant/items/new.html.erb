<h1>New Merchant Item Page</h1>

<ol>
<%= form_with url: merchant_items_path(@merchant), method: :post, data: { turbo: false }, local: true do |f| %>
  <p><%= f.label :name, 'Name:' %></p>
  <p><%= f.text_field :name %></p>

  <p><%= f.label :description, 'Description:' %></p>
  <p><%= f.text_field :description %></p>

  <p><%= f.label :unit_price, 'Unit Price:' %></p>
  <p><%= f.text_field :unit_price %></p>

  <p><%= f.submit "Create a New Item", class: "bg-gray-300 text-gray-800 py-2 px-4 rounded hover:bg-gray-400" %></p>
<% end %>
</ol>