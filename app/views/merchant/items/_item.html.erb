<div id="item-<%= item.id %>">

<h3><%= link_to "#{item.name}", 
    merchant_item_path(@merchant, item), 
    method: :get 
%> </h3>

<ul>
  <li> <b> ID: </b> <%= item.id %>
  <li> <b> Description: </b> <%= item.description %>
  <li> <b> Price: </b> <%= number_to_currency(item.unit_price/100.00) %>
  <li> <b> Status: </b> <%= item.status %>
</ul>

<% if item.status == "Enabled" %>
  <div class="bg-red-500 text-white py-2 px-4 rounded-md w-20 h-10 flex items-center">
    <%= button_to "Disable", 
      merchant_item_path(@merchant, item), 
      method: :patch, 
      params: {status: "Disabled"}  
    %>
  </div>
<% else %>
  <div class="bg-green-500 text-white py-2 px-4 rounded-md w-20 h-10 flex items-center">
    <%= button_to "Enable", 
      merchant_item_path(@merchant, item), 
      method: :patch, 
      params: {status: "Enabled"}  
    %>
  </div>
<% end %>

</div>