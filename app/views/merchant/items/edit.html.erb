<h1>Merchant Item Edit Page</h1>

<%= form_with url: "/merchants/#{@item.merchant_id}/items/#{@item.id}", method: :patch,  local: true, data: { turbo: false } do |f| %>
  <p><%= f.label :name, 'Name:' %> </p>
  <%= f.text_field :name, value: @item.name %>
  <p><%= f.label :description, 'Description:' %>
  <%= f.text_field :description, value: @item.description %>
  <p><%= f.label :unit_price, 'Unit Price (in cents):' %></p>
  <%= f.text_field :unit_price, value: @item.unit_price %>
  <p><%= f.submit "Submit", class: "bg-gray-300 text-gray-800 py-2 px-4 rounded hover:bg-gray-400" %>
<% end %>